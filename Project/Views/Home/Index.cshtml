@using Project.Resources
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_LayoutBasic.cshtml";
}


<div class="container mt-5">
	<div id="carouselExampleControls" class="carousel slide mx-auto" style="width: 40%; " data-bs-ride="carousel" data-bs-interval="3000">
		<div class="carousel-inner">
			<div class="carousel-item active">
				<img class="d-block w-80" src="~/Content/Images/1b6cd40ad9212db947918c17e09c175d.jpg" alt="First slide">
			</div>

			<div class="carousel-item">
				<img class="d-block w-80" src="~/Content/Images/a5e18d03cfc7a2224d3294f1ebb5330d.jpg" alt="Third slide">
			</div>
		</div>
		<a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-bs-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="sr-only">Previous</span>
		</a>
		<a class="carousel-control-next" href="#carouselExampleControls" role="button" data-bs-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="sr-only">Next</span>
		</a>
	</div>

</div>

@section footor{
	<div style="margin-bottom:0px">
		<footer class="bg-dark text-white mt-5 ">
			<div class="container py-2">
				<div class="row">
					<div class="col-md-4">
						<h5>@Resource.information</h5>
						<p>@Resource.web</p>
					</div>
				</div>
				<div class="text-center py-3">
					&copy; @Resource.copy
				</div>
			</div>
		</footer>
	</div>
} 