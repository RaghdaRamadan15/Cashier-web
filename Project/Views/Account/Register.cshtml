@model Project.Models.User
@using Project.Resources
@{
	ViewBag.Title = "Register";
	Layout = "~/Views/Shared/_LayoutBasic.cshtml";
}



<div class="container mt-5">
	<div class="row justify-content-center mt-5">
		<div class="col-md-6">
			<div class="card shadow-sm">
				<div class="card-body">

					<h2 class="text-center">@Resource.Register</h2>

					@using (Html.BeginForm())
					{

						<div class="mb-3">
							@Html.Label(Resource.name, new { @class = "form-label" })
							@Html.EditorFor(c => c.Username, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(c => c.Username, " ", new { @class = "text-danger" })
						</div>


						<div class="mb-3">
							@Html.Label(Resource.email, new { @class = "form-label" })
							@Html.EditorFor(c => c.email, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(c => c.email, " ", new { @class = "text-danger" })
						</div>


						<div class="mb-3">
							@Html.Label(Resource.Password, new { @class = "form-label" })
							@Html.EditorFor(c => c.PasswordHash, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(c => c.PasswordHash, " ", new { @class = "text-danger" })
						</div>


						<input type="submit" class="btn btn-success w-100" value="@Resource.add" />
						<div class="mt-3">
							@Html.ValidationSummary(true, " ", new { @class = "text-danger" })
						</div>

					}



				</div>
			</div>
		</div>
	</div>

</div>

@section vaild{

	@Scripts.Render("~/script")
}


