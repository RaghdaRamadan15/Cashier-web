@model Project.Models.Product
@using Project.Resources
@{
	ViewBag.Title = "edit";
	Layout = "~/Views/Shared/_LayoutBasic.cshtml";
}

<div class="container mt-5">
	<div class="row justify-content-center mt-5">
		<div class="col-md-6">
			<div class="card shadow-sm">
				<div class="card-body">
					<h1 class="text-center mb-4">@Resource.Product</h1>

					@using (Html.BeginForm("edit", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
					{
						<input hidden name="id" value="@Model.id" />
						<div class="mb-3">
							@Html.Label(Resource.ProductName, new { @class = "form-label" })
							@Html.EditorFor(c => c.ProductName, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(c => c.ProductName, " ", new { @class = "text-danger" })
						</div>

						<div class="mb-3">
							@Html.Label(Resource.image, new { @class = "form-label" })
							<input type="file" name="file" class="form-control" />
							@Html.ValidationMessageFor(c => c.image, " ", new { @class = "text-danger" })
						</div>

						<div class="mb-3">
							@Html.Label(Resource.Quantity, new { @class = "form-label" })
							@Html.EditorFor(c => c.Quantity, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(c => c.Quantity, " ", new { @class = "text-danger" })
						</div>

						<div class="mb-3">
							@Html.Label(Resource.Price, new { @class = "form-label" })
							@Html.EditorFor(c => c.Price, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(c => c.Price, " ", new { @class = "text-danger" })
						</div>

						<input type="submit" class="btn btn-success w-100 mt-3" value="@Resource.edit" />

						<div class="mt-3">
							@Html.ValidationSummary(true, " ", new { @class = "text-danger" })
						</div>
					}
				</div>
			</div>
		</div>
	</div>

</div>


